{
  "name": "proxmox-mpc",
  "version": "0.1.0",
  "description": "A console tool, web application, and MCP server for managing Proxmox home lab servers with natural language interaction and declarative state management",
  "main": "dist/index.js",
  "bin": {
    "proxmox-mpc": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "cli": "tsx src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "proxmox",
    "mcp",
    "virtualization",
    "infrastructure",
    "cli",
    "homelab"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "express": "^4.18.2",
    "prisma": "^5.9.1",
    "@prisma/client": "^5.9.1",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "zod": "^3.22.4"
  }
}