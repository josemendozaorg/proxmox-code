{
  "types": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "docs", "section": "Documentation"},
    {"type": "style", "section": "Styles", "hidden": true},
    {"type": "refactor", "section": "Code Refactoring"},
    {"type": "perf", "section": "Performance Improvements"},
    {"type": "test", "section": "Testing"},
    {"type": "build", "section": "Build System", "hidden": true},
    {"type": "ci", "section": "CI/CD", "hidden": true},
    {"type": "chore", "hidden": true},
    {"type": "revert", "section": "Reverts"}
  ],
  "commitUrlFormat": "https://github.com/proxmox-mpc/proxmox-mpc/commit/{{hash}}",
  "compareUrlFormat": "https://github.com/proxmox-mpc/proxmox-mpc/compare/{{previousTag}}...{{currentTag}}",
  "issueUrlFormat": "https://github.com/proxmox-mpc/proxmox-mpc/issues/{{id}}",
  "releaseCommitMessageFormat": "chore(release): {{currentTag}}",
  "skip": {
    "bump": false,
    "changelog": false,
    "commit": false,
    "tag": false
  },
  "packageFiles": [
    {
      "filename": "package.json",
      "type": "json"
    }
  ],
  "bumpFiles": [
    {
      "filename": "package.json",
      "type": "json"
    },
    {
      "filename": "src/types/version.ts",
      "updater": {
        "readVersion": "export const VERSION = '(.*)';?",
        "writeVersion": "export const VERSION = '{{version}}';"
      }
    }
  ],
  "scripts": {
    "prerelease": "npm run build && npm run test && npm run lint",
    "postbump": "npm run changelog",
    "postchangelog": "git add CHANGELOG.md"
  },
  "header": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [standard-version](https://github.com/conventional-changelog/standard-version) for commit guidelines.\n",
  "infile": "CHANGELOG.md",
  "preset": "angular",
  "tagPrefix": "v"
}