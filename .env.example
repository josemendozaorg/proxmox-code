# Proxmox-MPC Environment Configuration

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production
SESSION_SECRET=your-super-secure-session-secret-here-change-in-production

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Database Configuration
# SQLite (default for simple deployments)
DATABASE_URL=file:/app/data/proxmox-mpc.db

# PostgreSQL (for production deployments)
# DATABASE_URL=postgresql://proxmox:secure_password@postgres:5432/proxmox_mpc
POSTGRES_DB=proxmox_mpc
POSTGRES_USER=proxmox
POSTGRES_PASSWORD=secure_password_change_in_production

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=secure_redis_password_change_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Request Configuration
MAX_REQUEST_SIZE=10mb

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration (optional)
GRAFANA_PASSWORD=secure_grafana_password_change_in_production
PROMETHEUS_RETENTION=200h

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Application Features
ENABLE_METRICS=true
ENABLE_AUDIT_LOG=true
ENABLE_BACKUP=true

# Development Settings (only for development)
# VITE_API_URL=http://localhost:3000
# DEBUG=proxmox-mpc:*